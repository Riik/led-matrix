DEBUGFLAGS := -D_GLIBCXX_DEBUG -DDEBUG -Og -ggdb
RELEASEFLAGS := -DNDEBUG -O2
PROFILEFLAGS := $(RELEASEFLAGS) -pg
RPI4-ARCHFLAGS :=-mcpu=cortex-a72 -mfloat-abi=hard -mfpu=neon-fp-armv8
CXXLANGFLAGS := -std=gnu++20
WARNINGFLAGS := -Wall -Wshadow=local -Werror -Wno-error=unused-variable -Wno-error=unused-but-set-variable
MAKESUPPORTFLAGS := -MMD -MP
HOST-TEST-CXXFLAGS := $(CXXLANGFLAGS) $(DEBUGFLAGS) $(WARNINGFLAGS) $(MAKESUPPORTFLAGS)
HOST-DEBUG-CXXFLAGS := $(CXXLANGFLAGS) $(DEBUGFLAGS) $(WARNINGFLAGS) $(MAKESUPPORTFLAGS)
HOST-RELEASE-CXXFLAGS := $(CXXLANGFLAGS) $(RELEASEFLAGS) $(WARNINGFLAGS) $(MAKESUPPORTFLAGS)
RPI4-DEBUG-CXXFLAGS := $(CXXLANGFLAGS) $(DEBUGFLAGS) $(WARNINGFLAGS) $(MAKESUPPORTFLAGS)
RPI4-RELEASE-CXXFLAGS := $(CXXLANGFLAGS) $(RELEASEFLAGS) $(WARNINGFLAGS) $(RPI4-ARCHFLAGS) $(MAKESUPPORTFLAGS)
RPI4-PROFILE-CXXFLAGS := $(CXXLANGFLAGS) $(PROFILEFLAGS) $(WARNINGFLAGS) $(RPI4-ARCHFLAGS) $(MAKESUPPORTFLAGS)
HOST-TEST-LDFLAGS := -pthread
HOST-DEBUG-LDFLAGS := -pthread
HOST-RELEASE-LDFLAGS := -s -pthread
RPI4-DEBUG-LDFLAGS := $(RPI4-ARCHFLAGS) -pthread
RPI4-RELEASE-LDFLAGS := $(RPI4-ARCHFLAGS) -s -pthread
RPI4-PROFILE-LDFLAGS := $(RPI4-ARCHFLAGS) -pthread -pg
